<Window x:Class="Filme.NeuerFilm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filme"
        mc:Ignorable="d"
        Title="NeuerFilm" Height="450" Width="800">
    <UniformGrid Rows="3" Columns ="2">
        <TextBlock>Titel</TextBlock>
        <TextBox Text="{Binding Titel}"/>
        <TextBlock>Länge in Minuten</TextBlock> 
        <TextBox Text="{Binding LängeInMinuten}"/>
        <TextBlock>Ticketpreis</TextBlock>
        <TextBox Text="{Binding Ticketpreis}"/>
    </UniformGrid>
</Window>
